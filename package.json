{
  "name": "carve",
  "version": "0.0.1",
  "description": "Simple animation of DOM element properties.",
  "main": "lib/node/index.js",
  "scripts": {
    "cleanup": "./node_modules/.bin/rimraf lib",
    "prebuild": "npm run cleanup",
    "build": "npm run build:node & npm run build:browser",
    "build:browser": "./node_modules/.bin/webpack --config webpack.config.js",
    "build:node": "./node_modules/.bin/babel ./src --out-dir ./lib/node",
    "dev": "npm run watch:test & npm run watch:build",
    "watch:test": "./node_modules/.bin/karma start ./karma.conf.js",
    "watch:build": "./node_modules/.bin/webpack --config webpack.config.js --watch",
    "test": "./node_modules/.bin/karma start ./karma.conf.js --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fczbkk/carve.git"
  },
  "keywords": [
    "animation"
  ],
  "author": "Riki Fridrich <riki@fczbkk.com> (http://fczbkk.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fczbkk/carve/issues"
  },
  "homepage": "https://github.com/fczbkk/carve#readme",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.21",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-jasmine": "^0.3.7",
    "karma-mocha-reporter": "^1.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "phantomjs-prebuilt": "^2.1.4",
    "rimraf": "^2.5.2",
    "the-dom-box": "^1.0.0",
    "webpack": "^1.12.14"
  }
}
